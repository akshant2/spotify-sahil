{
  "name": "react-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "yarn tailwind:watch & craco start",
    "build": "yarn tailwind && export PUBLIC_URL=/resources/react && react-scripts build && gulp",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "tailwind": "postcss tailwind/tailwind.css -o src/styles/tailwind.css",
    "tailwind:watch": "npx tailwindcss -i tailwind/tailwind.css -o src/styles/tailwind.css --watch",
    "lint-staged": "lint-staged -c .lintstagedrc.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "autoprefixer": "^10.4.7",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.3",
    "through2": "^4.0.2"
  }
}
